<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer 1 text</th>
      <th>Answer 2 text</th>
      <th>Answer 3 text</th>
      <th>Answer 4 text</th>
      <th>Answer 5 text</th>
      <th>Answer 6 text</th>
      <th>Answer 7 text</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answer_1_text %></td>
        <td><%= answer.answer_2_text %></td>
        <td><%= answer.answer_3_text %></td>
        <td><%= answer.answer_4_text %></td>
        <td><%= answer.answer_5_text %></td>
        <td><%= answer.answer_6_text %></td>
        <td><%= answer.answer_7_text %></td>
        <td><%= answer.question %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
